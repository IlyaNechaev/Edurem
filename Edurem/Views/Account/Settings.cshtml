@model Edurem.Models.User

@{
    ViewData["Title"] = "Настройки";
    ViewData["ApplicationName"] = "Edurem";
    ViewData["AuthenticatedUser"] = Model;
    Layout = "_AccountLayout";
}

<form class="mt-5" asp-area="" asp-controller="Account" asp-action="Settings">
    <div class="row justify-content-center">
        <div class="col-10 mb-1">
            <p class="mb-0" style="font-size: 20px; font-family: Algerian">
                ЛИЧНАЯ ИНФОРМАЦИЯ
            </p>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-10 border rounded">
            <div class="form-group row justify-content-around">
                <div class="col-9 col-md-5">
                    <p class="font-weight-bold mb-0" style="font-family: Algerian; font-size: 19px">Имя</p>
                    <input class="form-control" style="font-size: 19px" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger" style="font-weight: bold"></span>
                </div>
                <div class="col-9 col-md-5">
                    <p class="font-weight-bold mb-0" style="font-family: Algerian; font-size: 19px">Фамилия</p>
                    <input class="form-control" style="font-size: 19px" asp-for="Surname" />
                    <span asp-validation-for="Surname" class="text-danger" style="font-weight: bold"></span>
                </div>
            </div>
            <div class="form-group row justify-content-around">
                <div class="col-9 col-md-5">

                    @if (Model.IsActivated)
                    {
                        <p class="font-weight-bold mb-0" style="font-family: Algerian; font-size: 19px">Почта</p>
                        <input class="form-control" style="font-size: 19px" asp-for="Email" readonly />
                    }
                    else
                    {
                        <p class="font-weight-bold mb-0" style="font-family: Algerian; font-size: 19px">
                            Почта
                            <a>
                                <i class="far fa-question-circle ml-2" style="color:red"></i>
                            </a>
                        </p>
                        <component>@(await Html.RenderComponentAsync<Edurem.Components.ConfirmEmail>(RenderMode.ServerPrerendered, new { Email = Model.Email }))</component>
                    }
                </div>
                <div class="col-9 col-md-5">
                    <p class="font-weight-bold mb-0" style="font-family: Algerian; font-size: 19px">Фамилия</p>
                    <input class="form-control" style="font-size: 19px" asp-for="Surname" />
                    <span asp-validation-for="Surname" class="text-danger" style="font-weight: bold"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center mt-3">
        <div class="col-10 mb-1">
            <p class="mb-0" style="font-size: 20px; font-family: Algerian">
                УВЕДОМЛЕНИЯ
            </p>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-10 border rounded">
            <div class="form-group row justify-content-around">


            </div>
        </div>
    </div>
</form>