@model Edurem.ViewModels.SettingsViewModel

@{
    ViewData["Title"] = "Настройки";
    ViewData["ApplicationName"] = "Edurem";
    Layout = "_AccountLayout";
}
<!--RenderMode.Server необходим для того, чтобы при обновлении страницы OnInitialized метод вызывался лишь один раз-->
@(await Html.RenderComponentAsync<Edurem.Components.UserSettings>(RenderMode.ServerPrerendered,
        new { User = Model.User, NotificationOptions = Model.Notifications }))

<script src="~/js/site.js"></script>