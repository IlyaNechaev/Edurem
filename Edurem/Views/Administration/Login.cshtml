@model Edurem.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Войти в систему";
}

<div id="changableMark" class="container-fluid d-flex flex-column" style="background-image: url('/FileSystem/Images/programming_1.jpg')">
    <div class="row justify-content-center align-content-center w-100 h-100">
        <div class="col-10 col-md-4 col-xl-3 border rounded" style="background-color: white">
            <form class="form-signin text-center mb-3 mt-3 ml-3 mr-3" method="post" asp-controller="Administration" asp-action="Login">
                <img class="mb-2" src="~/FileSystem/Images/EduremLogoBlue.png" alt="" width="72" height="72">
                <div class="row justify-content-center">
                    <p class="mb-3 font-weight-normal" style="font-size: 20px; font-family: Georgia">Пожалуйста, авторизуйтесь</p>
                </div>
                <div class="row form-group">
                    <input asp-for="Login" type="text" class="form-control" placeholder="Логин" required autofocus
                           style="font-size: 20px">
                    <span asp-validation-for="Login" class="text-danger" style="font-weight: bold"></span>
                </div>
                <div class="row form-group">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Пароль" required
                           style="font-size: 20px">
                    <span asp-validation-for="Password" class="text-danger" style="font-weight: bold"></span>
                </div>
                <div class="row">
                    <button class="btn btn-lg btn-primary btn-block" type="submit"
                            style="font-size: 18px">
                        Войти
                    </button>
                </div>
                <div class="text-left validation text-danger" style="font-size: 20px" asp-validation-summary="ModelOnly"></div>
            </form>
        </div>
    </div>

    <script>
    (function () {
        window.onresize = changeMarkSize;
        window.onload = changeMarkSize;

        function changeMarkSize() {
            let markHeight = window.innerHeight * 0.85;

            document.getElementById("changableMark").style.height = markHeight + "px";
        };
    })();
    </script>
</div>