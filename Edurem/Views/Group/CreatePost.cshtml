@using Edurem.ViewModels;
@model Edurem.Models.Group;

@{
    ViewData["Title"] = "Новый пост";
    ViewData["ApplicationName"] = "Edurem";
    Layout = "_AccountLayout";
}
<link href="~/css/progress-steps.css" rel="stylesheet" />

<component>
    @(await Html.RenderComponentAsync<Edurem.Components.NewPost>(RenderMode.ServerPrerendered, new { Group = Model, 
        CurrentUser = new CurrentUserViewModel 
        { 
            Id = int.Parse(Context.User.GetClaim(ClaimKey.Id)),
            Name = Context.User.GetClaim(ClaimKey.Name),
            Surname = Context.User.GetClaim(ClaimKey.Surname)
        } 
    }))
</component>

<script src="~/js/input_file.js"></script>