@model Edurem.ViewModels.AccountViewModel<Edurem.ViewModels.GroupViewModel>

@{
    ViewData["Title"] = Model.ViewModel.Name;
    ViewData["ApplicationName"] = "Edurem";
    Layout = "_AccountLayout";
}

<div class="row">
    <p style="font-size: 18px">@Model.ViewModel.Subject.Name</p>
</div>
<div class="row">
    <div class="col-8">
        <component>@(await Html.RenderComponentAsync<Edurem.Components.PostsList>(RenderMode.ServerPrerendered, new {  }))</component>
    </div>
    <div class="col-4">
        <div class="row rounded" style="background-color: azure">
            <div class="col-12">
                <div class="row mt-2">
                    <div class="col-6">
                        <p class="text-right" style="font-size: 15px">
                            <b>Количество участников</b>:
                        </p>
                    </div>
                    <div class="col-6">
                        <p class="text-left" style="font-size: 15px">
                            @Model.ViewModel.MembersCount
                        </p>
                    </div>
                </div>
            </div>            
        </div>
    </div>
</div>